{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "DOM", "DOM.Iterable", "ESNext" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "types":  ["vite/client"],

    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true

  },
  "include": [ "Src" ]
}